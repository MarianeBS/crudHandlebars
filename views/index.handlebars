<body style="background-color: #16ffc1; padding-top: 5%">
    <div class="container border border-dark" style="background-color: #fafafa;">
        <div class="row">
            <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
                <div class="container">
                    <a class="navbar-brand" href="#">AGENDAMENTOS</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/">Cadastrar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/consultar">Consultar</a>
                            </li>
                        </ul>
                    </div>
                </div>       
            </nav>
        </div>
        <div class="row">
            <form action="/cadastrar" method="POST" style="padding: 30px 30px 20px 30px;">
                <div class="mb-3">
                    <h3 class="text-center">Agendamento de Potenciais Clientes</h3>
                </div>    
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Nome:</label>
                            <input type="nome" name="nome" class="form-control border border-dark" id="nome">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Telefone:</label>
                            <input type="telefone" class="form-control border border-dark" name="telefone border border-dark" id="telefone" aria-describedby="emailHelp" placeholder="(XX) XXXX-XXXX">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="inputState" class="form-label">Origem:</label>
                            <select id="origem" name="origem" class="form-select border border-dark">
                                <option value="celular" selected>Celular</option>
                                <option value="whatsapp">WhatsApp</option>
                                <option value="telegram">Telegram</option>
                            </select>   
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Data do Contato:</label>
                            <input type="date" class="form-control border border-dark" required name="data_contato" id="data_contato">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Observação:</label>
                            <textarea class="form-control border border-dark" id="observacao" name="observacao" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 d-flex justify-content-center">
                        <button type="submit" class="btn btn-danger">Cadastrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
